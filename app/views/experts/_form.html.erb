        <%= f.label :suggested_skill, "Input exprtise, if your skills is not listed here" %>
        <%= f.text_field :suggested_skill %>
        <br>
        <%= f.label :first_name, "First Name" %>
        <%= f.text_field :first_name %>
        <br>
        <%= f.label :last_name, "Last Name" %>
        <%= f.text_field :last_name %>
        <br>
        <%= f.label :email, "Email Address" %>E
        <%= f.email_field :email %>
        <br>
        <%= f.label :phone_number, "Phone Number" %>
        <%= f.number_field :phone_number %>
        <br>
        <%= f.label :contact_address, "Contact Address" %>
        <%= f.text_field :contact_address %>
        <br>
        <%= f.label :short_bio, "Short Biography" %>
        <%= f.text_area :short_bio %>
        <br>
        <%= f.label :phone_number, "Certification" %>
        <%= f.text_field :certification %>
        <br>
        <%= f.hidden_field :status %>
        <%= f.submit "Submit", disable_with: 'Submiting...' %>
     <% end %>
    </table>
</div>