<%= form_for(@expert) do |f| %>
    <% if @expert.errors.any? %>
        <div id="error_explanation">
        <h2><%= pluralize(@expert.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
        <% @expert.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
        </div>
    <% end %>
    <table>
        <%= f.label :TalentType, "Select Specialization" %>
