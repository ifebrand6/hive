<%= render partial: 'dashboard/shared/transaction_header' %>
<div class="row">
    <div class="col-lg-12">
        <div class="card px-2">
            <div class="card-body">
                <div class="container-fluid">
                    <div class="text-center"><%= image_tag 'admin/logo.png',alt:"logo" %></div>
                    <h3 class="text-right my-5">Invoice&nbsp;&nbsp;#INV-<%= @transaction.user_id%></h3>
                    <hr>
                </div>
                <div class="container-fluid d-flex justify-content-between">
                    <div class="col-lg-3 pl-0">
                        <p class="mt-5 mb-2"><b>INVOICE ID : <%= @transaction.id%></b></p>
                        <p><b>DUE DATE : </b><%= @transaction.created_at%></p>
                    </div>
                    <div class="col-lg-3 pr-0">
                        <p class="mt-5 mb-2 text-right"><b>Invoice to</b></p>
                        <p class="text-right">Customer <%= @transaction.user_id%><br>
                            <%= @transaction.finalized_request.request.email%><br>location</p>
                    </div>
                </div>
                <div class="container-fluid mt-5 d-flex justify-content-center w-100">
                    <div class="table-responsive w-100">
                        <table class="table">
                            <thead>

                            </thead>
                            <tbody>
                                <tr class="text-right">
                                    <td class="text-left text-uppercase">Talent Requested on</td>
                                    <td> <%= @transaction.finalized_request.request.created_at%></td>
                                </tr>
                            </tbody>
                            <tbody >
                                <tr class="text-right">

                                    <td class="text-left text-uppercase">Talent Assigned</td>
                                    <td> <%= @transaction.finalized_request.talent_assignment.expert.talent_type.expert_specialization%>
                                    </td>
                                </tr>
                            </tbody>
                            <tbody>
                                <tr class="text-right">
                                    <td class="text-left  text-uppercase">Engaged Date</td>
                                    <td><%= @transaction.finalized_request.talent_assignment.engaged_date%></td>
                                </tr>
                            </tbody>
                            <tbody>
                                <tr class="text-right">

                                    <td class="text-left text-uppercase">Contract Start Date</td>
                                    <td><%= @transaction.finalized_request.talent_assignment.start_date%></td>
                                </tr>
                            </tbody>
                            <tbody>
                                <tr class="text-right text-uppercase">

                                    <td class="text-left">Contract End Date</td>
                                    <td><%= @transaction.finalized_request.talent_assignment.end_date%></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="container-fluid mt-5 w-100">
                    <p class="text-right mb-2">Sub - Total amount
                        <%= humanized_money_with_symbol(@transaction.amount_price) %></p>
                    <p class="text-right">vat (10%) : 0</p>
                    <h4 class="text-right mb-5">Total : <%= humanized_money_with_symbol(@transaction.amount_price) %>
                    </h4>
                    <hr>
                </div>
                <div class="container-fluid w-100">
                    <a href="invoice.html#" class="btn btn-danger float-right mt-4 ml-2"><i class="mdi mdi-printer mr-1"></i>Print</a>
                </div>
            </div>
        </div>
    </div>
</div>