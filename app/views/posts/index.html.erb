<%= render partial: 'dashboard/shared/post_header' %>
<% if (@posts.count) >= 1 %>
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"><%= link_to "Create new post", new_post_path, class:"btn btn-outline-primary" %></h4>
            <p class="page-description">List of blog posts</p>
            <div class="row">
            <div class="table-sorter-wrapper col-lg-12 table-responsive">
                <table id="sortable-table-1" class="table">
                <thead>
                    <tr>
                    <th>#</th>
                    <th class="sortStyle">Title</th>    
                    </tr>
                </thead>
                <% @posts.each do |post| %>
                <tbody>
                    <tr>
                    <td><%= post.id%></td>
                    <td><%= post.title%></td>
                    <td><%= link_to 'Edit', edit_post_path(post), class:"btn btn-outline-primary" %></td>
                    <td><%= link_to 'Show', single_post_path(post), class:"btn btn-outline-primary" %></td>
                    <td><%= link_to 'Delete',post_path(post), method: :delete, data: {confirm: "Are you sure?"}, class:"btn btn-outline-primary"%></td>
                    </tr>
                </tbody>
                <% end %>
                </table>
            </div>
            </div>
        </div>
    </div> 
    <% else %>
    <div class="col-lg-7 mx-auto text-white">                 
    <div class="row mt-5">
        <div class="col-12 text-center mt-xl-2  text-danger">
            <%= image_tag("admin/empty.gif", :size => "260x180", :crop => :fill) %>
            <p>You have no Expert on board at the moment.</p>
        </div>
    </div>                   
    </div>
<% end %>
