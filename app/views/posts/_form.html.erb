<% if @post.errors.any? %>
<h2>The following errors prevented the post from saving:</h2>
<ul>
<% @post.errors.full_messages.each do |msg|%>
<li><%= msg %></li>
<% end %>
</ul>
<% end %>
<%= form_for @post do |post| %>
<p>
<%= post.label :title %><br>
<%= post.text_field :title %>
</p>
<p>
<%= post.label :content %><br>
<%= post.cktext_area :content ,id:'editor', rows: 5, cols: '40'%>
</p>
<p>
<%= post.submit %>
</p>
<% end %>