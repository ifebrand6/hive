    </div>
</div>
<div class="col-12 grid-margin">
    <div class="card card-statistics">
        <div class="row">
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-center flex-column flex-sm-row">
                    <i class="mdi mdi-account-multiple-outline text-primary mr-6 mr-sm-12 icon-lg"></i>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-center flex-column flex-sm-row">
                    <div class="wrapper text-center text-sm-left">
                        <br>
                        <h3 class="mb-0 font-weight-medium">Weâ€™re here to help you!</h3>
                        <div class="fluid-container">
                            <p class="card-text mb-0">Ask a question or file a support ticketn or report an issues. Our team support team will get back to you by email.</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="d-flex align-items-center justify-content-center flex-column flex-sm-row">
                    <div class="wrapper text-center text-sm-left">
                        <div class="fluid-container">
                            <br>
                            <button type="button" class="btn btn-outline-info btn-fw">Get support</button> </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="col-12 grid-margin">
    <% if (@transactions.count) >= 1 %>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Recent Transactions</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> # </th>
                                <th> Talent Requested </th>
                                <th> Amount Paid</th>
                                <th> Last Update </th>
                                <th> Tracking ID </th>
                            </tr>
                        </thead>
                        <%  @transactions.each do |transaction| %>
                        <tbody>
                            <tr>
                                <td>
                                  1
                                </td>
                                <td>  <%= @talent_assignment.find_by(finalized_request_id: transaction.finalized_request.id).expert.talent_type.expert_specialization %>
                                </td>
                                <td>
                                    <%= humanized_money_with_symbol(transaction.amount_price) %>
                                </td>
                                <td><%= transaction.updated_at.strftime("%B %d, %Y")%></td>
                                <td><%= transaction.id%></td>
                            </tr>
                        </tbody>
                        <% end %>
                    </table>
                </div>
            </div>
        </div>
        <% else %>
    <div class="col-lg-7 mx-auto text-white">
        <div class="row mt-5">
            <div class="col-12 text-center mt-xl-2  text-danger">
                <%= image_tag("admin/empty.gif", :size => "260x180", :crop => :fill) %>
                <p>You have not made any recent transactions  at the moment.</p>
            </div>
        </div>
    </div>
    <% end %>
</div>


