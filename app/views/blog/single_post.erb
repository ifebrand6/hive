<p>
<b>Title:</b>
<%=h @post.title %>

</p>

<p>
<b>Body:</b>
<%=h @post.content %>
</p>

<h2>Comments</h2>

<% @post.comments.each do |c| %>
<p>
    <b><%=h c.name %> said:</b><br />
    <%= time_ago_in_words(c.created_at) %> ago
</p>

<p>
    <%=h c.body %>
</p>    
<% end %>

<%= form_with(model: @comment, local: true,url: {action: "add_comment"}) do |f| %>
<p>
    <%= f.label :name, "Email" %><br />
    <%= f.email_field :email %>
    <%= f.label :name, "Author" %><br />
    <%= f.text_field :name %><br />
    <%= f.label :body, "Comment Description" %><br />
    <%= f.text_area :body %>
    f,<%= f.hidden_field :post_id, value: @post.id %>
</p>

<p>
    <%= f.submit "Add Comment" %>
</p>
<% end %>
