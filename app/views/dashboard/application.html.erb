<h1>Expert Pending Applications</h1>
<p>This is a list of expert that applied to be listed</p>
<div>
<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Date Applied</th>
            <th>First name</th>
            <th>Talent Type</th>
            <th>Certification</th>
        </tr>
    </thead>
    <tbody>
     <% @expert_application_list.each do |expert_application| %>
        <tr>
            <%= link_to  expert_application_path(expert_application) do %>
            <th scope="row"><%= expert_application.id %></th>
            <td><%= expert_application.created_at %></td>
            <td><%= expert_application.firstName %></td>
            <td><%= expert_application.talent_type.expert_specialization %></td>
            <td><%= expert_application.id %></td>
            <td><%= link_to  "Show",   expert_application_path(expert_application) %></td>
        </tr>
        <% end %>
        <% end %>
    </tbody>
</table>
</div>
<%= link_to  "back", :back %>
