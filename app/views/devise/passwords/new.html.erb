<h2>Forgot your password?</h2>
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>
  <%= render partial: 'devise/shared/error_messages' %>
  <div class="form-group required user_email">
  <%= f.email_field :email, class:"form-control form-control-lg", placeholder:"Email",required: true, input_html: { autocomplete: "email" },autofocus: true %>
  </div>
  <div class="mt-3">
    <%= f.button :submit, "Send me reset password instructions", class:"btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" %>
  </div>
<% end %>
<div class="text-center mt-4 font-weight-light"> Dont have an account? <%= link_to "Create", new_registration_path(resource_name),class:"text-primary" %>
</div>
