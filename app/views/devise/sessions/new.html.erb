<h4>Hello! let's get started</h4>
<h6 class="font-weight-light">Sign in to continue.</h6>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), class:"pt-3") do |f| %>
  <div class="form-group">
  <%= f.email_field :email, class:"form-control form-control-lg", placeholder:"Username" %>
</div>
<div class="form-group">
  <%= f.password_field :password, required: false, class:" form-control form-control-lg" , input_html: { autocomplete: "current-password" } ,  placeholder:"Password" %>
</div>
<div class="mt-3">
  <%= f.button :submit, "SIGN IN", class:"btn btn-block btn-gradient-primary btn-lg font-weight-medium auth-form-btn" %>
</div>
<div class="my-2 d-flex justify-content-between align-items-center">
  <% if devise_mapping.rememberable? %>
  <div class="form-check">
    <%= f.check_box :remember_me, class:"form-check-input" %>
    <%= f.label :remember_me, "Keep me signed in ", class:"form-check-label text-muted " %>
  </div>
  <% end %>
  <%= link_to "Forgot your password?", new_password_path(resource_name), class:"auth-link text-black" %>
</div>
<div class="text-center mt-4 font-weight-light"> Don't have an account?
  <%= link_to "Create", new_registration_path(resource_name),class:"text-primary" %>
</div>
<% end %>